--[[
    VENYX STYLE REMASTERED (FINAL)
    - Works after death
    - Sharp Bottom-Left Corner ONLY
    - Dropdowns & Keybinds added
    - Animations included
]]

local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")

local Venyx = {}
local UIConfig = {
    Keybind = Enum.KeyCode.RightControl
}

--// Colors (Venyx Palette - UNTOUCHED)
local Theme = {
    Background = Color3.fromRGB(24, 24, 24),
    Glow = Color3.fromRGB(0, 0, 0),
    Accent = Color3.fromRGB(255, 140, 20),
    LightContrast = Color3.fromRGB(30, 30, 30),
    DarkContrast = Color3.fromRGB(20, 20, 20),
    TextColor = Color3.fromRGB(255, 255, 255)
}

--// Cleanup
if game.CoreGui:FindFirstChild("VenyxUI") then
    game.CoreGui.VenyxUI:Destroy()
end

--// Utils
local function Create(class, properties)
    local instance = Instance.new(class)
    for k, v in pairs(properties) do
        instance[k] = v
    end
    return instance
end

function Venyx.new(title)
    local Library = {}
    
    local ScreenGui = Create("ScreenGui", {
        Name = "VenyxUI",
        Parent = CoreGui,
        ResetOnSpawn = false -- Works after death
    })
    
    local Main = Create("Frame", {
        Name = "Main",
        Parent = ScreenGui,
        BackgroundColor3 = Theme.Background,
        BorderSizePixel = 0,
        Position = UDim2.new(0.5, -275, 0.5, -175),
        Size = UDim2.new(0, 550, 0, 350),
        ClipsDescendants = true
    })
    
    -- Rounding applied to Main
    local UICorner = Create("UICorner", {Parent = Main, CornerRadius = UDim.new(0, 0)})

    -- // THE CORNER FIX //
    -- This patch covers the bottom-left corner to make it sharp (unrounded)
    local CornerPatch = Create("Frame", {
        Parent = Main,
        BackgroundColor3 = Theme.Background,
        BorderSizePixel = 0,
        Position = UDim2.new(0, 0, 0, -0), -- Bottom Left
        Size = UDim2.new(0, 0, 0, 0),
        ZIndex = 1
    })
    
    --// Header
    local TopBar = Create("Frame", {
        Name = "TopBar",
        Parent = Main,
        BackgroundColor3 = Theme.LightContrast,
        BorderSizePixel = 0,
        Size = UDim2.new(1, 0, 0, 40)
    })
    
    local Title = Create("TextLabel", {
        Parent = TopBar,
        BackgroundTransparency = 1,
        Position = UDim2.new(0, 15, 0, 0),
        Size = UDim2.new(0, 200, 1, 0),
        Font = Enum.Font.GothamBold,
        Text = title,
        TextColor3 = Theme.TextColor,
        TextSize = 16,
        TextXAlignment = Enum.TextXAlignment.Left
    })
    
    local CloseBtn = Create("TextButton", {
        Parent = TopBar,
        BackgroundTransparency = 1,
        Position = UDim2.new(1, -35, 0, 5),
        Size = UDim2.new(0, 30, 0, 30),
        Font = Enum.Font.GothamBold,
        Text = "X",
        TextColor3 = Color3.fromRGB(150, 150, 150),
        TextSize = 16
    })
    
    function Library:toggle()
        Main.Visible = not Main.Visible
    end

    CloseBtn.MouseButton1Click:Connect(function()
        Library:toggle()
    end)
    
    --// Dragging
    local Dragging, DragInput, DragStart, StartPos
    TopBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            Dragging = true
            DragStart = input.Position
            StartPos = Main.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then Dragging = false end
            end)
        end
    end)
    
    TopBar.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then DragInput = input end
    end)
    
    RunService.RenderStepped:Connect(function()
        if Dragging and DragInput then
            local delta = DragInput.Position - DragStart
            Main.Position = UDim2.new(StartPos.X.Scale, StartPos.X.Offset + delta.X, StartPos.Y.Scale, StartPos.Y.Offset + delta.Y)
        end
    end)
    
    --// Sidebar
    local Sidebar = Create("Frame", {
        Name = "Sidebar",
        Parent = Main,
        BackgroundColor3 = Theme.LightContrast,
        BorderSizePixel = 0,
        Position = UDim2.new(0, 0, 0, 40),
        Size = UDim2.new(0, 130, 1, -40)
    })
    
    local TabContainer = Create("ScrollingFrame", {
        Parent = Sidebar,
        BackgroundTransparency = 1,
        Size = UDim2.new(1, 0, 1, -10),
        Position = UDim2.new(0, 0, 0, 10),
        ScrollBarThickness = 0
    })
    
    local TabLayout = Create("UIListLayout", {
        Parent = TabContainer,
        SortOrder = Enum.SortOrder.LayoutOrder,
        Padding = UDim.new(0, 5)
    })
    
    --// Content
    local Pages = Create("Frame", {
        Name = "Pages",
        Parent = Main,
        BackgroundTransparency = 1,
        Position = UDim2.new(0, 140, 0, 50),
        Size = UDim2.new(1, -150, 1, -60)
    })
    
    --// Keybind Listener
    UserInputService.InputBegan:Connect(function(input, gp)
        if not gp and input.KeyCode == UIConfig.Keybind then
            Library:toggle()
        end
    end)

    --// Library Logic
    local Tabs = {}
    local First = true
    
    function Library:MakeTab(name)
        -- Tab Button
        local TabBtn = Create("TextButton", {
            Parent = TabContainer,
            BackgroundColor3 = Theme.LightContrast,
            BorderSizePixel = 0,
            Size = UDim2.new(1, 0, 0, 30),
            Font = Enum.Font.GothamMedium,
            Text = name,
            TextColor3 = Color3.fromRGB(150, 150, 150),
            TextSize = 13
        })
        
        -- Animation
        TabBtn.MouseEnter:Connect(function()
            if TabBtn.TextColor3 ~= Theme.TextColor then
                TweenService:Create(TabBtn, TweenInfo.new(0.2), {TextColor3 = Color3.fromRGB(200, 200, 200)}):Play()
            end
        end)
        TabBtn.MouseLeave:Connect(function()
            if TabBtn.TextColor3 ~= Theme.TextColor then
                TweenService:Create(TabBtn, TweenInfo.new(0.2), {TextColor3 = Color3.fromRGB(150, 150, 150)}):Play()
            end
        end)
        
        -- Indicator
        local Indicator = Create("Frame", {
            Parent = TabBtn,
            BackgroundColor3 = Theme.Accent,
            BorderSizePixel = 0,
            Position = UDim2.new(0, 0, 0, 0),
            Size = UDim2.new(0, 3, 1, 0),
            Visible = false
        })

        -- Page Frame
        local Page = Create("ScrollingFrame", {
            Name = name .. "Page",
            Parent = Pages,
            BackgroundTransparency = 1,
            Size = UDim2.new(1, 0, 1, 0),
            ScrollBarThickness = 2,
            ScrollBarImageColor3 = Theme.LightContrast,
            Visible = false
        })
        
        local PageLayout = Create("UIListLayout", {
            Parent = Page,
            SortOrder = Enum.SortOrder.LayoutOrder,
            Padding = UDim.new(0, 8)
        })
        
        PageLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
            Page.CanvasSize = UDim2.new(0, 0, 0, PageLayout.AbsoluteContentSize.Y + 10)
        end)
        
        -- Switch Logic
        TabBtn.MouseButton1Click:Connect(function()
            for _, t in pairs(Tabs) do
                t.Page.Visible = false
                TweenService:Create(t.Btn, TweenInfo.new(0.2), {TextColor3 = Color3.fromRGB(150, 150, 150)}):Play()
                t.Ind.Visible = false
            end
            Page.Visible = true
            TweenService:Create(TabBtn, TweenInfo.new(0.2), {TextColor3 = Theme.TextColor}):Play()
            Indicator.Visible = true
        end)
        
        if First then
            First = false
            Page.Visible = true
            TabBtn.TextColor3 = Theme.TextColor
            Indicator.Visible = true
        end
        
        table.insert(Tabs, {Btn = TabBtn, Page = Page, Ind = Indicator})
        
        --// Section / Wrapper
        local Section = {}
        
        function Section:AddSection() return Section end
        
        -- 1. ADD TOGGLE
        function Section:AddToggle(props)
            local ToggleBox = Create("Frame", {
                Parent = Page,
                BackgroundColor3 = Theme.LightContrast,
                BorderSizePixel = 0,
                Size = UDim2.new(1, -5, 0, 36)
            })
            Create("UICorner", {Parent = ToggleBox, CornerRadius = UDim.new(0, 4)})
            
            local Text = Create("TextLabel", {
                Parent = ToggleBox,
                BackgroundTransparency = 1,
                Position = UDim2.new(0, 10, 0, 0),
                Size = UDim2.new(1, -50, 1, 0),
                Font = Enum.Font.Gotham,
                Text = props.Name,
                TextColor3 = Theme.TextColor,
                TextSize = 13,
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            local Checkbox = Create("TextButton", {
                Parent = ToggleBox,
                BackgroundColor3 = Theme.DarkContrast,
                BorderSizePixel = 0,
                Position = UDim2.new(1, -30, 0.5, -10),
                Size = UDim2.new(0, 20, 0, 20),
                Text = "",
                AutoButtonColor = false
            })
            Create("UICorner", {Parent = Checkbox, CornerRadius = UDim.new(0, 4)})
            
            local State = props.Default or false
            
            local function Update()
                if State then
                    TweenService:Create(Checkbox, TweenInfo.new(0.2), {BackgroundColor3 = Theme.Accent}):Play()
                else
                    TweenService:Create(Checkbox, TweenInfo.new(0.2), {BackgroundColor3 = Theme.DarkContrast}):Play()
                end
            end
            Update()
            
            Checkbox.MouseButton1Click:Connect(function()
                State = not State
                Update()
                if props.Callback then props.Callback(State) end
            end)
        end
        
        -- 2. ADD BUTTON
        function Section:AddButton(props)
            local Button = Create("TextButton", {
                Parent = Page,
                BackgroundColor3 = Theme.LightContrast,
                BorderSizePixel = 0,
                Size = UDim2.new(1, -5, 0, 36),
                Font = Enum.Font.Gotham,
                Text = props.Name,
                TextColor3 = Theme.TextColor,
                TextSize = 13,
                AutoButtonColor = false
            })
            Create("UICorner", {Parent = Button, CornerRadius = UDim.new(0, 4)})
            
            Button.MouseEnter:Connect(function()
                TweenService:Create(Button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(45, 45, 45)}):Play()
            end)
            
            Button.MouseLeave:Connect(function()
                TweenService:Create(Button, TweenInfo.new(0.2), {BackgroundColor3 = Theme.LightContrast}):Play()
            end)
            
            Button.MouseButton1Click:Connect(function()
                if props.Callback then props.Callback() end
            end)
        end
        
        -- 3. ADD SLIDER
        function Section:AddSlider(props)
            local SliderBox = Create("Frame", {
                Parent = Page,
                BackgroundColor3 = Theme.LightContrast,
                BorderSizePixel = 0,
                Size = UDim2.new(1, -5, 0, 50)
            })
            Create("UICorner", {Parent = SliderBox, CornerRadius = UDim.new(0, 4)})
            
            local Text = Create("TextLabel", {
                Parent = SliderBox,
                BackgroundTransparency = 1,
                Position = UDim2.new(0, 10, 0, 5),
                Size = UDim2.new(1, -20, 0, 20),
                Font = Enum.Font.Gotham,
                Text = props.Name,
                TextColor3 = Theme.TextColor,
                TextSize = 13,
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            local ValueText = Create("TextLabel", {
                Parent = SliderBox,
                BackgroundTransparency = 1,
                Position = UDim2.new(1, -60, 0, 5),
                Size = UDim2.new(0, 50, 0, 20),
                Font = Enum.Font.GothamBold,
                Text = tostring(props.Default or props.Min),
                TextColor3 = Theme.TextColor,
                TextSize = 13,
                TextXAlignment = Enum.TextXAlignment.Right
            })
            
            local SlideTrack = Create("TextButton", {
                Parent = SliderBox,
                BackgroundColor3 = Theme.DarkContrast,
                BorderSizePixel = 0,
                Position = UDim2.new(0, 10, 0, 32),
                Size = UDim2.new(1, -20, 0, 4),
                Text = "",
                AutoButtonColor = false
            })
            Create("UICorner", {Parent = SlideTrack, CornerRadius = UDim.new(0, 2)})
            
            local Fill = Create("Frame", {
                Parent = SlideTrack,
                BackgroundColor3 = Theme.Accent,
                BorderSizePixel = 0,
                Size = UDim2.new(0, 0, 1, 0)
            })
            
            local min, max, def = props.Min or 0, props.Max or 100, props.Default or 0
            Fill.Size = UDim2.new((def - min)/(max - min), 0, 1, 0)
            
            local Dragging = false
            
            local function Update(input)
                local pos = math.clamp((input.Position.X - SlideTrack.AbsolutePosition.X) / SlideTrack.AbsoluteSize.X, 0, 1)
                local val = math.floor(min + (max - min) * pos)
                
                Fill.Size = UDim2.new(pos, 0, 1, 0)
                ValueText.Text = tostring(val)
                if props.Callback then props.Callback(val) end
            end
            
            SlideTrack.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    Dragging = true
                    Update(input)
                end
            end)
            
            UserInputService.InputChanged:Connect(function(input)
                if Dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
                    Update(input)
                end
            end)
            
            UserInputService.InputEnded:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then Dragging = false end
            end)
        end

        -- 4. ADD DROPDOWN (LIST) - [ADDED AS REQUESTED]
        function Section:AddDropdown(props)
            local Dropdown = Create("Frame", {
                Parent = Page,
                BackgroundColor3 = Theme.LightContrast,
                BorderSizePixel = 0,
                Size = UDim2.new(1, -5, 0, 36),
                ClipsDescendants = true
            })
            Create("UICorner", {Parent = Dropdown, CornerRadius = UDim.new(0, 4)})

            local Text = Create("TextLabel", {
                Parent = Dropdown,
                BackgroundTransparency = 1,
                Position = UDim2.new(0, 10, 0, 0),
                Size = UDim2.new(1, -40, 0, 36),
                Font = Enum.Font.Gotham,
                Text = props.Name .. ": " .. (props.Default or "None"),
                TextColor3 = Theme.TextColor,
                TextSize = 13,
                TextXAlignment = Enum.TextXAlignment.Left
            })

            local OpenBtn = Create("TextButton", {
                Parent = Dropdown,
                BackgroundTransparency = 1,
                Size = UDim2.new(1, 0, 0, 36),
                Text = "",
                ZIndex = 2
            })
            
            local Arrow = Create("TextLabel", {
                Parent = Dropdown,
                BackgroundTransparency = 1,
                Position = UDim2.new(1, -30, 0, 0),
                Size = UDim2.new(0, 30, 0, 36),
                Font = Enum.Font.GothamBold,
                Text = "V",
                TextColor3 = Color3.fromRGB(150, 150, 150),
                TextSize = 12
            })

            local ItemHolder = Create("ScrollingFrame", {
                Parent = Dropdown,
                BackgroundTransparency = 1,
                Position = UDim2.new(0, 0, 0, 36),
                Size = UDim2.new(1, 0, 0, 100),
                CanvasSize = UDim2.new(0,0,0,0),
                ScrollBarThickness = 2,
                ScrollBarImageColor3 = Theme.Accent
            })
            local ItemLayout = Create("UIListLayout", {
                Parent = ItemHolder,
                SortOrder = Enum.SortOrder.LayoutOrder
            })
            
            ItemLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
                ItemHolder.CanvasSize = UDim2.new(0,0,0, ItemLayout.AbsoluteContentSize.Y)
            end)

            local Open = false
            
            OpenBtn.MouseButton1Click:Connect(function()
                Open = not Open
                if Open then
                    TweenService:Create(Dropdown, TweenInfo.new(0.3, Enum.EasingStyle.Quart), {Size = UDim2.new(1, -5, 0, 136)}):Play()
                    TweenService:Create(Arrow, TweenInfo.new(0.3), {Rotation = 180}):Play()
                else
                    TweenService:Create(Dropdown, TweenInfo.new(0.3, Enum.EasingStyle.Quart), {Size = UDim2.new(1, -5, 0, 36)}):Play()
                    TweenService:Create(Arrow, TweenInfo.new(0.3), {Rotation = 0}):Play()
                end
            end)

            for _, item in pairs(props.Items or {}) do
                local ItemBtn = Create("TextButton", {
                    Parent = ItemHolder,
                    BackgroundColor3 = Theme.DarkContrast,
                    BorderSizePixel = 0,
                    Size = UDim2.new(1, -4, 0, 24),
                    Font = Enum.Font.Gotham,
                    Text = item,
                    TextColor3 = Color3.fromRGB(200, 200, 200),
                    TextSize = 12
                })
                Create("UICorner", {Parent = ItemBtn, CornerRadius = UDim.new(0, 4)})
                
                ItemBtn.MouseButton1Click:Connect(function()
                    Open = false
                    Text.Text = props.Name .. ": " .. item
                    TweenService:Create(Dropdown, TweenInfo.new(0.3, Enum.EasingStyle.Quart), {Size = UDim2.new(1, -5, 0, 36)}):Play()
                    TweenService:Create(Arrow, TweenInfo.new(0.3), {Rotation = 0}):Play()
                    if props.Callback then props.Callback(item) end
                end)
            end
        end

        -- 5. ADD KEYBIND - [ADDED AS REQUESTED]
        function Section:AddKeybind(name, defaultKey, onActivate, onChanged)
            local BindFrame = Create("Frame", {
                Parent = Page,
                BackgroundColor3 = Theme.LightContrast,
                BorderSizePixel = 0,
                Size = UDim2.new(1, -5, 0, 36)
            })
            Create("UICorner", {Parent = BindFrame, CornerRadius = UDim.new(0, 4)})

            local Text = Create("TextLabel", {
                Parent = BindFrame,
                BackgroundTransparency = 1,
                Position = UDim2.new(0, 10, 0, 0),
                Size = UDim2.new(1, -80, 1, 0),
                Font = Enum.Font.Gotham,
                Text = name,
                TextColor3 = Theme.TextColor,
                TextSize = 13,
                TextXAlignment = Enum.TextXAlignment.Left
            })

            local BindBtn = Create("TextButton", {
                Parent = BindFrame,
                BackgroundColor3 = Theme.DarkContrast,
                BorderSizePixel = 0,
                Position = UDim2.new(1, -80, 0.5, -12),
                Size = UDim2.new(0, 70, 0, 24),
                Font = Enum.Font.GothamBold,
                Text = (defaultKey and defaultKey.Name) or "None",
                TextColor3 = Color3.fromRGB(200, 200, 200),
                TextSize = 12,
                AutoButtonColor = false
            })
            Create("UICorner", {Parent = BindBtn, CornerRadius = UDim.new(0, 4)})

            local currentKey = defaultKey
            local listening = false

            BindBtn.MouseButton1Click:Connect(function()
                if listening then return end
                listening = true
                BindBtn.Text = "..."
                BindBtn.TextColor3 = Theme.Accent
                
                local conn
                conn = UserInputService.InputBegan:Connect(function(input)
                    if input.UserInputType == Enum.UserInputType.Keyboard then
                        currentKey = input.KeyCode
                        BindBtn.Text = currentKey.Name
                        BindBtn.TextColor3 = Color3.fromRGB(200, 200, 200)
                        listening = false
                        conn:Disconnect()
                        if onChanged then onChanged(currentKey) end
                    end
                end)
            end)

            UserInputService.InputBegan:Connect(function(input, gp)
                if not gp and input.KeyCode == currentKey then
                    if onActivate then onActivate() end
                end
            end)
        end
        
        return Section
    end
    
    return Library
end

--------------------------------------------------------------------
-- [ YOUR SCRIPT HERE ]
--------------------------------------------------------------------

local Window = Venyx.new("Ryusai Hub")

--// 1. Main Tab
local MainTab = Window:MakeTab("Combat")
local MainSection = MainTab:AddSection()

MainSection:AddToggle({
    Name = "Kill Aura",
    Default = false,
    Callback = function(State)
        print("Killaura:", State)
    end
})

MainSection:AddButton({
    Name = "Reset Character",
    Callback = function()
        game.Players.LocalPlayer.Character:BreakJoints()
    end
})

MainSection:AddDropdown({
    Name = "Target Mode",
    Default = "Nearest",
    Items = {"Nearest", "Lowest HP", "Mouse"},
    Callback = function(item)
        print("Selected:", item)
    end
})

--// 2. Settings
local SettingsTab = Window:MakeTab("Settings")
local SettingsSection = SettingsTab:AddSection()

SettingsSection:AddKeybind("Toggle UI", Enum.KeyCode.RightControl, function()
    Window:toggle()
end, function(newKey)
    print("New Bind:", newKey)
end)

MainSection:AddSlider({
    Name = "WalkSpeed",
    Min = 16,
    Max = 200,
    Default = 16,
    Callback = function(Value)
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
    end
})
